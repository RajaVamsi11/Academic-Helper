<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_item_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="10dp" />

        <TextView
            android:layout_marginTop="18dp"
            android:id="@+id/main_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/main_item_image"
            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/main_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_text_view"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/main_item_image"
            android:text="Description"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_tv_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_item_image"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/main_tv_description"
            android:layout_marginTop="6dp"
            android:text="Click Here"
            android:textSize="12dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>